{
    "name": "turborepo-skeleton",
    "private": true,
    "author": "M1",
    "prettier": {
        "printWidth": 90,
        "tabWidth": 4,
        "arrowParens": "always",
        "trailingComma": "none",
        "jsxSingleQuote": true,
        "singleQuote": true,
        "semi": true
    },
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint; prettier --check . --ignore-path=.prettierignore",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@repo/internals": "workspace:*",
        "prettier": "^3.1.0",
        "turbo": "latest"
    },
    "packageManager": "pnpm@8.9.0",
    "engines": {
        "node": ">=18"
    }
}
