{
    "name": "turborepo-starter",
    "private": true,
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "arrowParens": "always",
        "trailingComma": "none",
        "jsxSingleQuote": false,
        "singleQuote": true,
        "semi": true
    },
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint; prettier . --check --ignore-path=.prettierignore",
        "format": "prettier . --write"
    },
    "devDependencies": {
        "@repo/internals": "workspace:*",
        "prettier": "^3.2.4",
        "turbo": "latest"
    },
    "packageManager": "pnpm@8.9.0",
    "engines": {
        "node": ">=18"
    }
}
